# EditorConfig - Monorepo Root Configuration
# https://editorconfig.org

root = true

# 全ファイル共通
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# C# ファイル
[*.cs]
indent_size = 4
tab_width = 4

# ========================================
# C# コードスタイル
# ========================================

# using ディレクティブ
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false
csharp_using_directive_placement = outside_namespace:warning

# var の使用
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# 式形式メンバー
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = false:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion

# パターンマッチング
csharp_style_pattern_matching_over_is_with_cast_check = true:warning
csharp_style_pattern_matching_over_as_with_null_check = true:warning
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_prefer_pattern_matching = true:suggestion

# null チェック
dotnet_style_null_propagation = true:warning
csharp_style_throw_expression = true:suggestion
csharp_style_conditional_delegate_call = true:warning

# 修飾子
dotnet_style_require_accessibility_modifiers = for_non_interface_members:warning
csharp_preferred_modifier_order = public,private,protected,internal,static,extern,new,virtual,abstract,sealed,override,readonly,unsafe,volatile,async:warning

# 括弧
dotnet_style_parentheses_in_arithmetic_binary_operators = always_for_clarity:suggestion
dotnet_style_parentheses_in_relational_binary_operators = always_for_clarity:suggestion

# this. 修飾子
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# ========================================
# 命名規則
# ========================================

# インターフェース: I プレフィックス
dotnet_naming_rule.interface_should_be_begins_with_i.severity = warning
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i

dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_symbols.interface.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected

dotnet_naming_style.begins_with_i.required_prefix = I
dotnet_naming_style.begins_with_i.capitalization = pascal_case

# private フィールド: _ プレフィックス + camelCase
dotnet_naming_rule.private_fields_should_be_camel_case.severity = warning
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.camel_case_underscore.required_prefix = _
dotnet_naming_style.camel_case_underscore.capitalization = camel_case

# const: PascalCase
dotnet_naming_rule.constants_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.constants_should_be_pascal_case.symbols = constants
dotnet_naming_rule.constants_should_be_pascal_case.style = pascal_case_style

dotnet_naming_symbols.constants.applicable_kinds = field, local
dotnet_naming_symbols.constants.required_modifiers = const

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# public メンバー: PascalCase
dotnet_naming_rule.public_members_should_be_pascal_case.severity = warning
dotnet_naming_rule.public_members_should_be_pascal_case.symbols = public_members
dotnet_naming_rule.public_members_should_be_pascal_case.style = pascal_case_style

dotnet_naming_symbols.public_members.applicable_kinds = property, method, event, delegate
dotnet_naming_symbols.public_members.applicable_accessibilities = public

# ローカル変数・パラメータ: camelCase
dotnet_naming_rule.locals_should_be_camel_case.severity = suggestion
dotnet_naming_rule.locals_should_be_camel_case.symbols = locals_and_parameters
dotnet_naming_rule.locals_should_be_camel_case.style = camel_case_style

dotnet_naming_symbols.locals_and_parameters.applicable_kinds = parameter, local

dotnet_naming_style.camel_case_style.capitalization = camel_case

# 型パラメータ: T プレフィックス
dotnet_naming_rule.type_parameters_should_be_t_prefix.severity = warning
dotnet_naming_rule.type_parameters_should_be_t_prefix.symbols = type_parameters
dotnet_naming_rule.type_parameters_should_be_t_prefix.style = t_prefix_style

dotnet_naming_symbols.type_parameters.applicable_kinds = type_parameter

dotnet_naming_style.t_prefix_style.required_prefix = T
dotnet_naming_style.t_prefix_style.capitalization = pascal_case

# ========================================
# フォーマット
# ========================================

# 改行
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_expression_clauses = true

# インデント
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = one_less_than_current
csharp_indent_block_contents = true
csharp_indent_braces = false

# スペース
csharp_space_after_cast = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_parentheses = false
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false

# ========================================
# StyleCop.Analyzers 無効化
# ========================================
# 参照: docs/StyleCop_CommonlyDisabledRules.md

# --- Documentation (一括無効化: 内部プロジェクト、XMLドキュメント出力不要) ---
dotnet_diagnostic.SA0001.severity = none       # XML comment analysis disabled
dotnet_diagnostic.SA1600.severity = none       # Elements must be documented
dotnet_diagnostic.SA1601.severity = none       # Partial elements must be documented
dotnet_diagnostic.SA1602.severity = none       # Enumeration items must be documented
dotnet_diagnostic.SA1611.severity = none       # Element parameters must be documented
dotnet_diagnostic.SA1615.severity = none       # Element return value must be documented
dotnet_diagnostic.SA1623.severity = none       # Property summary must match accessors
dotnet_diagnostic.SA1633.severity = none       # File must have header
dotnet_diagnostic.SA1634.severity = none       # File header must show copyright
dotnet_diagnostic.SA1635.severity = none       # File header must have copyright text
dotnet_diagnostic.SA1636.severity = none       # File header copyright text must match
dotnet_diagnostic.SA1637.severity = none       # File header must contain file name
dotnet_diagnostic.SA1638.severity = none       # File header file name must match
dotnet_diagnostic.SA1639.severity = none       # File header must have summary
dotnet_diagnostic.SA1640.severity = none       # File header must have valid company text
dotnet_diagnostic.SA1641.severity = none       # File header company name text must match
dotnet_diagnostic.SA1642.severity = none       # Constructor summary must begin with standard text
dotnet_diagnostic.SA1643.severity = none       # Destructor summary must begin with standard text

# --- Readability ---
dotnet_diagnostic.SA1101.severity = none       # this. 強制 → 本プロジェクトは this. 不使用 (dotnet/runtime 準拠)
dotnet_diagnostic.SA1118.severity = none       # パラメータの複数行禁止 → ラムダ・LINQ で頻出
dotnet_diagnostic.SA1122.severity = none       # string.Empty 強制 → "" を許容
dotnet_diagnostic.SA1124.severity = none       # #region 禁止 → 用途を限定して許容
dotnet_diagnostic.SA1127.severity = none       # ジェネリック制約の改行強制 → 短い制約は同一行で可
dotnet_diagnostic.SA1128.severity = none       # コンストラクタ初期化子の改行強制 → 短い初期化子は同一行で可

# --- Naming (本プロジェクトの命名規約と競合) ---
dotnet_diagnostic.SA1309.severity = none       # _ プレフィックス禁止 → 本プロジェクトは _camelCase 採用
dotnet_diagnostic.SA1310.severity = none       # フィールド名のアンダースコア禁止 → s_ 等と競合
dotnet_diagnostic.SA1312.severity = none       # ローカル変数の小文字開始 → 破棄変数 _ で誤検知
dotnet_diagnostic.SA1313.severity = none       # パラメータの小文字開始 → ラムダ破棄 (_, e) で誤検知

# --- Ordering ---
dotnet_diagnostic.SA1200.severity = none       # using を namespace 内に → 本プロジェクトは外に配置
dotnet_diagnostic.SA1201.severity = none       # メンバー種別順の強制 → 機能単位グループ化を許容
dotnet_diagnostic.SA1202.severity = none       # アクセスレベル順の強制 → 機能単位グループ化を許容
dotnet_diagnostic.SA1204.severity = none       # static メンバーを先に → 機能単位グループ化を許容

# --- Spacing (モダン C# との競合) ---
dotnet_diagnostic.SA1010.severity = none       # 開き角括弧 → C# 12 コレクション式 [1,2,3] で誤検知
dotnet_diagnostic.SA1011.severity = none       # 閉じ角括弧 → Nullable 配列 byte[]? で誤検知

# --- Layout ---
dotnet_diagnostic.SA1503.severity = none       # ブレース省略禁止 → ガード節 if (...) return; を許容
dotnet_diagnostic.SA1516.severity = none       # 要素間の空行強制 → 連続 auto-property で過剰

# --- Maintainability ---
dotnet_diagnostic.SA1402.severity = none       # 1ファイル1型 → 小さい関連型の同居を許容
dotnet_diagnostic.SA1413.severity = none       # 末尾カンマ強制 → チームの好みで任意

# --- 代替ルール有効化 (SA→SX 置換) ---
dotnet_diagnostic.SX1101.severity = warning    # this. 使用を禁止 (SA1101 の逆)
dotnet_diagnostic.SX1309.severity = warning    # private フィールドに _ プレフィックス必須 (SA1309 の逆)

# ========================================
# Analyzer 設定（共通）
# ========================================

# パフォーマンス
dotnet_diagnostic.CA1822.severity = suggestion      # static にできるメソッド
dotnet_diagnostic.CA1826.severity = warning         # Count() の代わりに Length/Count
dotnet_diagnostic.CA1827.severity = warning         # Count() > 0 の代わりに Any()
dotnet_diagnostic.CA1829.severity = warning         # Count() の代わりに Length/Count プロパティ
dotnet_diagnostic.CA1848.severity = suggestion      # LoggerMessage デリゲート

# 信頼性
dotnet_diagnostic.CA2007.severity = suggestion      # ConfigureAwait（プロジェクトにより調整）
dotnet_diagnostic.CA2016.severity = warning         # CancellationToken パラメータ転送

# 保守性
dotnet_diagnostic.CA1507.severity = warning         # nameof 使用
dotnet_diagnostic.CA1510.severity = suggestion      # ArgumentNullException.ThrowIfNull

# ========================================
# その他のファイル形式
# ========================================

# JSON ファイル
[*.json]
indent_size = 2

# YAML ファイル
[*.{yml,yaml}]
indent_size = 2

# XML ファイル
[*.xml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# シェルスクリプト
[*.sh]
end_of_line = lf

# バッチファイル
[*.{cmd,bat}]
end_of_line = crlf
